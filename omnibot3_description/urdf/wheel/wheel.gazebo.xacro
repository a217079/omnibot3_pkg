<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
  
  <xacro:macro name="wheel_gazebo" params="id_num">
    <gazebo reference="wheel${id_num}_link">
      <selfCollide>true</selfCollide>
      <mu1 value="0.8"/>
      <mu2 value="0"/>
      <fdir1 value="1 0 0"/>
    </gazebo>
  </xacro:macro>

</robot>
